//Map
//Defining map
#include <iostream> 
#include <iterator> 
#include <map> 
map<string, int> marks{ 
    { "Rithvik", 78 }, 
    { "Suraj", 91 }, { "Jessie", 100 }, 
    { "Praveen", 99 }, { "Bisa", 84 } 
}; 

//Defining iterator for map
map<string, int>::iterator i; 

map<string, string> fruits {
    {"apple", "red"}
}
map<string, string>::iterator i;

//Map iteration 
for(i = marks.begin(); i != marks.end(); i++)
  i->first //key
  i->second //value     

