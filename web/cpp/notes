//To convert all characters to lower/upper case 
transform(name1.begin(), name1.end(), name1.begin(), ::tolower);
transform(name2.begin(), name2.end(), name2.begin(), ::toupper);

//Comparing two strings
string1.compare(string2)
It returns a negative value if string1 is less than second string, returns 0 when the two strings are equal
and returns value greater than 0 if the first string is greater than the second

//To find the absolute value of the given number 
abs(number)
eg:- abs(-5) = 5


//Find position of the first occurence of the given substring 
//string.find() returns the position of the first occurence of the given substring 
#include <iostream> 
#include <string> 
statement.find("substring") != string::npos
string::npos -> non position 

//Extract the substring from the given string 
//Returns the characters from the start_position to the position before the given end_position
string substring = string.substr(start_position, end_position)

//Erase the substring from the given string 
//Erases the characters form the start_position to the position before the given end_positoin
string.erase(start_position, end_position)


//Vector 
#include<vector>
vector <int> arr {
1,3,12
};
//Adding element at the end of the vector
arr.push_back(34);
//Removing element at the end of the vector 
arr.pop_back();

//Displaying the elements of the vector
for(int i = 0; i < arr.size(); i++) {
    cout << arr[i];
}
//2-dimensional vector 
vector <int> a {
    { 3, 33},
    {33, 333}
};
vector <int> temp;
//Adding elements in the two dimensional vector 
for(int i = 0; i < size; i++) {
    temp.clear(); // clear the elements inside the temp vector during the start of each iteration
    for(int j = 0; j < size; j++) { // iterating till the required size of the vector 
        temp.push_back(j); // pushing the input elements inside the vector 
        
    }
    a.push_back(temp); // pushing the vector inside the vector
}




//Map
//Defining map
#include <iostream> 
#include <iterator> 
#include <map> 
map<string, int> marks{ 
    { "Rithvik", 78 }, 
    { "Suraj", 91 }, { "Jessie", 100 }, 
    { "Praveen", 99 }, { "Bisa", 84 } 
}; 

//Defining iterator for map
map<string, int>::iterator i; 

map<string, string> fruits {
    {"apple", "red"}
}
map<string, string>::iterator i;

//Map iteration 
for(i = marks.begin(); i != marks.end(); i++)
  i->first //key
  i->second //value     

